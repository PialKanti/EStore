@model Product

@{
    ViewBag.Title = Model.Name;
}

<div class="row mt-3">
    <div class="container col-md-6">
        <img class="img-thumbnail" src="~/images/demo_product.jpg" />
    </div>
    <div class="col-md-6">
        <h3 class="card-title">@Model.Name</h3>
        <h5 class="card-text text-danger">&#x9f3;@Model.Price</h5>
        <div class="text-left">
            <a href="#" class="btn btn-secondary">Add to Cart</a>
            <a href="#" class="btn btn-success">Buy now</a>
        </div>
    </div>
</div>

